@model HeartDiseasePrediction.ViewModel.LabViewModel

@{
    ViewData["Title"] = "Edit Lab Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="book_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <h4>
                        Create <span>Lab</span>
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Name" class="control-label"></label>
                            <input asp-for="@Model.Name" type="text" class="form-control" id="inputFullName">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                            <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="inputFullName">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Email" class="control-label"></label>
                            <input asp-for="@Model.Email" type="text" class="form-control" id="inputEmail">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Location" class="control-label"></label>
                            <input asp-for="@Model.Location" type="text" class="form-control" id="inputFullName" placeholder="Enter Lab Location">
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Price" class="control-label"></label>
                            <input asp-for="@Model.Price" type="text" class="form-control" id="inputFullName" placeholder="Enter Lab Price">
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Id" hidden class="control-label"></label>
                            <input asp-for="@Model.Id" hidden type="text" class="form-control" id="inputFullName">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-5">
                            <div>
                                @*<label>Current Image</label>*@
                                <img src="@Model.ProfileImg" height="100" width="100" />
                                <input asp-for="@Model.ProfileImg" type="hidden" />
                            </div>
                            <label asp-for="@Model.ImageFile">Lab Image</label>
                            <input type="file" asp-for="@Model.ImageFile" value="0" class="form-control" style="padding:8px;">
                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="btn-box">
                        <button type="submit" class="btn ">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}